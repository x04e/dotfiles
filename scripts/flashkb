cd /home/liam/dev/qmk_firmware
echo "Building keyboard firmware"
make planck/rev2:liamcustom && {
	echo "Done"
	echo -n "\nFlashing firmware in:"

	for i in {5..1}; do
		echo $i
		sleep 1
	done

	echo -n "\nFlashing firmware..."

	sudo avrdude -p atmega32u4 -P /dev/ttyACM0 -c avr109 -U flash:w:/home/liam/dev/qmk_firmware/planck_rev2_liamcustom.hex
}
