#!/bin/sh

icon='ï£–'
[[ -z "${BLOCK_BUTTON}" ]] || {
    i3-msg exec 'alacritty --class I3_FLOATING_WINDOW -o "window.dimensions.lines=40" -o "window.dimensions.columns=120" -o "font.size=12" -e ~/scripts/system_update' \
        2>&1 > /dev/null \
        && pkill -SIGRTMIN+11 i3blocks;
}

NUM_UPDATES="$(checkupdates | wc -l) "
echo "<span size=\"x-large\">$icon</span> <span rise=\"3pt\">$NUM_UPDATES</span>" #i3blocks full text
echo "<span size=\"x-large\">$icon</span> <span rise=\"3pt\">$NUM_UPDATES</span>" #i3blocks short text (same as full text)

if [ "$NUM_UPDATES" -ge 100 ]; then
    echo "#e06c75"
elif [ "$NUM_UPDATES" -ge 50 ]; then
    echo "#e5c07b"
fi
