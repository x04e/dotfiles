### I3 BAR
bar {
    mode hide
    hidden_state show # Show the bar until ~/.config/i3blocks/config:12 hides it
    modifier $mod
    status_command i3blocks # see ~/.config/i3blocks/config
    position bottom
    strip_workspace_numbers yes
    font pango:FantasqueSansMono Nerd Font Mono 14
    i3bar_command i3bar
    colors {

        background $color0
        #                   border  bg      text
        focused_workspace   $color1 $color1 $color2
        active_workspace    $color1 $color1 $color2
        inactive_workspace  $color1 $color1 $color4
        urgent_workspace    $color1 $color1 $color4
        binding_mode        $color1 $color1 $color4
    }
}


