# MPC bindings
bindsym XF86AudioRaiseVolume exec --no-startup-id mpc vol +5 && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id mpc vol -5 && $refresh_i3status
bindsym XF86AudioStop        exec --no-startup-id   mpc toggle &&  $refresh_i3status
bindsym XF86AudioPlay        exec --no-startup-id   mpc toggle &&  $refresh_i3status
# Programs and scripts
bindsym $mod+Return exec urxvt # Shell terminal emulator
bindsym $mod+Shift+Return exec urxvt -e vim -c terminal # Vim terminal emulator
bindsym $mod+f exec firefox
bindsym $mod+d exec runprogram # Program launcher
bindsym $mod+m exec music # Music selection
bindsym $mod+n exec nautilus
bindsym $mod+p exec shutter # Screenshots
bindsym $mod+Shift+Tab exec dm-tool switch-to-greeter # Lock screen
bindsym $mod+Tab exec ~/scripts/powermgmt # Shutdown, Restart, Sleep, Lock menu
# I3 bindings
bindsym $mod+q kill
bindsym $mod+e scratchpad show
bindsym $mod+g floating toggle
bindsym $mod+z gaps horizontal current toggle 700 # "Zen" mode
bindsym $mod+Shift+r restart
bindsym $mod+r mode "resize"
