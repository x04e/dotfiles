### SETUP
font pango:FantasqueSansMono Nerd Font Mono 10
default_orientation horizontal
floating_modifier $mod

set $up l
set $down k
set $left j
set $right semicolon
set $mod Mod4

set $ws01 "[1]"
set $ws02 "[2]"
set $ws03 "[3]"
set $ws04 "[4]"
set $ws05 "[5]"
set $ws06 "[6]"
set $ws07 "[7]"
set $ws08 "[8]"
set $ws09 "[9]"

set $refresh_i3status killall -SIGUSR1 i3blocks


### STARTUP
exec --no-startup-id setxkbmap -layout ie -option terminate:ctrl_alt_bksp # Kill X with Ctrl-Alt-Bkspc
exec --no-startup-id nm-applet # NetworkManager tray tool
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork


### I3 BAR
bar {
    mode hide
    hidden_state show # Show the bar until ~/.config/i3blocks/config:12 hides it
    modifier $mod
    status_command i3blocks # see ~/.config/i3blocks/config
    position bottom
    strip_workspace_numbers yes
    font pango:FantasqueSansMono Nerd Font Mono 14
    i3bar_command i3bar -t
    colors {
        background "#00000000"
        #                    border    backgrnd  text
        focused_workspace   "#282828" "#282828" "#ebdbb2"
        active_workspace    "#282828" "#282828" "#ebdbb2"
        inactive_workspace  "#282828" "#282828" "#a89984"
        urgent_workspace    "#282828" "#282828" "#a89984"
        binding_mode        "#282828" "#282828" "#a89984"
    }
}


